server {
    listen 8080;
	listen localhost:8000;

	server_name	webserv;


    location /wordpress {
        index   	index.php;
		methods		GET,PUT,POST;
		root		./content;
		cgi_path	./content;
		php_path	./content;
		autoindex	off;
		auth		test:test;
    }

    error_page   500 502 503 504;
	
}

server {
